---
import LanguageSelect from './LanguageSelect.astro';
import Search from './Search.astro';
import SiteTitle from './SiteTitle.astro';
import SocialIcons from './SocialIcons.astro';
import ThemeSelect from './ThemeSelect.astro';

interface Props {
	locale: string | undefined;
}

const { locale } = Astro.props;

const currentPath = Astro.url.pathname;
---

<div
	class="flex justify-between bg-white/80 dark:bg-zinc-950/80 backdrop-blur-lg h-14 items-center dark:text-white w-[calc(100%-32px)] mx-auto rounded-[50px]"
>
	<SiteTitle {locale} />
	{currentPath !== '/' ? <Search {locale} /> : null}
	<div class="flex items-center space-x-2 pr-4">
		<SocialIcons />
		<div class="h-4 w-[1px] bg-black dark:bg-white"></div>
		<ThemeSelect {locale} />
		<div class="h-4 w-[1px] bg-black dark:bg-white"></div>
		<LanguageSelect {locale} />
	</div>
</div>
