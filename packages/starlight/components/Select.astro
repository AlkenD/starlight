---
import Icon from '../user-components/Icon.astro';

interface Props {
	label: string;
	value: string;
	icon: Parameters<typeof Icon>[0]['name'];
	width?: string;
	responsive?: boolean;
	options: Array<{
		label: string;
		value: string;
		selected: boolean;
	}>;
}
---

<label class="flex items-center space-x-2 relative">
	<span class="hidden">{Astro.props.label}</span>
	<Icon
		name={Astro.props.icon}
		class="absolute left-2 top-0 bottom-0 my-auto pointer-events-none"
	/>
	<select
		class="appearance-none bg-transparent h-full w-fit px-8 py-2 shrink-0"
		value={Astro.props.value}
	>
		{
			Astro.props.options.map(({ value, selected, label }) => (
				<option class="w-fit" value={value} selected={selected} set:html={label} />
			))
		}
	</select>
	<Icon name="down-caret" class="absolute right-2 top-0 bottom-0 my-auto pointer-events-none" />
</label>
