---
import Icon from './Icon.astro';
import type { Icons } from '../components/Icons';

interface Props {
	icon?: keyof typeof Icons;
	title: string;
}

const { icon, title } = Astro.props;
---

<article
	class="p-4 dark:border-white/20 dark:hover:border-white border-black/20 hover:border-black space-y-4 transition-all ease-out rounded-xl border"
>
	<p class="text-xl flex items-center space-x-2">
		{icon && <Icon name={icon} class="icon" size="1.333em" />}
		<span set:html={title} />
	</p>
	<div class="text-zinc-800 dark:text-zinc-400"><slot /></div>
</article>
